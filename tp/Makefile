# Compilador que ser치 utilizado
CC=g++

# flags de compilaci칩n
CFLAGS=-g -Wall

# flags de linkeo
LDFLAGS=

# Agregar ac치 los archivos .cpp a compilar
SOURCES=testArbolBinario.cpp testMapa.cpp

# Objetos que ser치n generados (no tocar)
OBJECTS=$(SOURCES:.cpp=.o)

# Nombre del ejecutable a generar
EXECUTABLE=testArbolBinario testMapa

arbol: testArbolBinario.o
	$(CC) testArbolBinario.o -o testArbolBinario

mapa: testMapa.o
	$(CC) testMapa.o -o testMapa

clean:
	rm -rf $(EXECUTABLE) $(OBJECTS)

.cpp.o:
	$(CC) -I$(INCDIR) $(CFLAGS) $< -c -o $@
